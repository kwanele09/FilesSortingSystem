<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FilesSortingSystem.Views.UpdateRulePage"
    Title="Update Rule"
    BackgroundColor="#030F2A">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Page Title -->
            <Label
                Text="Update File Sort Rule"
                FontSize="35"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White" />

            <!-- Form Container -->
            <Border
                BackgroundColor="#043151"
                Stroke="White"
                StrokeThickness="1"
                Padding="20">

                <!-- Define rounded corners via StrokeShape -->
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">

                    <!-- File Extension -->
                    <VerticalStackLayout>
                        <Label
                            Text="File Extension"
                            FontSize="20"
                            TextColor="White" />
                        <Entry
                            Text="{Binding Extension}"
                            Placeholder="Enter file extension"
                            FontSize="18"
                            BackgroundColor="White"
                            TextColor="Black" />
                    </VerticalStackLayout>

                    <!-- Destination Folder -->
                    <VerticalStackLayout>
                        <Label
                            Text="Destination Folder"
                            FontSize="20"
                            TextColor="White" />
                        <Entry
                            Text="{Binding Category}"
                            Placeholder="Enter destination folder"
                            FontSize="18"
                            BackgroundColor="White"
                            TextColor="Black" />
                    </VerticalStackLayout>

                    <!-- Case Sensitive -->
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label
                            Text="Case Sensitive"
                            FontSize="20"
                            TextColor="White"
                            VerticalOptions="Center" />
                        <CheckBox
                            IsChecked="{Binding IsCaseSensitive}"
                            Color="Purple"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                <Button
                    Text="Save Rule"
                    Command="{Binding UpdateRuleCommand}"
                    BackgroundColor="#0C95F8"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="10"
                    HeightRequest="50"
                    Grid.Column="0" />

                <Button
                    Text="Close"
                    Command="{Binding CloseCommand}"
                    BackgroundColor="#808080"
                    TextColor="White"
                    FontSize="20"
                    CornerRadius="10"
                    HeightRequest="50"
                    Grid.Column="1" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
