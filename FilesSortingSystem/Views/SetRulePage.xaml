<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FilesSortingSystem.Views.SetRulePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FilesSortingSystem.ViewModels"
    Title="Set Rules"
    x:DataType="vm:SetRuleViewModel"
    Background="#030F2A">

    <Grid x:Name="RootGrid">
        <Border
            x:Name="MainBorder"
            Padding="50"
            BackgroundColor="#043151"
            HorizontalOptions="Center"
            Stroke="#043151"
            StrokeThickness="1"
            VerticalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.2"
                    Radius="10"
                    Offset="2,2" />
            </Border.Shadow>

            <VerticalStackLayout Spacing="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Sorting Rules" />
                <Label
                    FontSize="25"
                    HorizontalOptions="Center"
                    Text="Create your own sorting rules." />

                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="Fill"
                    Color="Gray" />

                <HorizontalStackLayout Spacing="205">
                    <VerticalStackLayout>
                        <Label
                            FontSize="25"
                            HorizontalOptions="Start"
                            Text="File Extension" />
                        <Entry
                            FontSize="18"
                            HorizontalOptions="FillAndExpand"
                            Placeholder="Enter file extension"
                            Text="{Binding Extension}"
                            VerticalOptions="Center" />
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <Label
                            FontSize="25"
                            HorizontalOptions="Start"
                            Text="Destination Folder" />
                        <Entry
                            FontSize="18"
                            HorizontalOptions="FillAndExpand"
                            Placeholder="Enter file destination folder"
                            Text="{Binding Category}"
                            VerticalOptions="End" />
                    </VerticalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <Label
                            FontSize="25"
                            HorizontalOptions="Start"
                            Text="Case Sensitive"
                            VerticalOptions="Center" />
                        <CheckBox IsChecked="{Binding IsCaseSensitive}" Color="Purple" />
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <Button
                    Background="#0C95F8"
                    Command="{Binding AddRuleCommand}"
                    FontSize="25"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Text="Save Rule"
                    TextColor="White"
                    WidthRequest="150" />
                <Button
                    Background="#030F2A"
                    Command="{Binding CloseCommand}"
                    FontSize="25"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Text="Close"
                    TextColor="White"
                    WidthRequest="150" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>