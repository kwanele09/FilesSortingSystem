<ContentPage
    x:Class="FilesSortingSystem.Views.SortingRulesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:domainEntities="clr-namespace:FilesSortingSystem.Core.DomainEntities;assembly=FilesSortingSystem.Core"
    xmlns:vm="clr-namespace:FilesSortingSystem.ViewModels"
    Title=""
    x:DataType="vm:SortingRulesViewModel"
    Background="#030F2A">

    <Grid x:Name="RootGrid">
        <Border
            x:Name="MainBorder"
            Padding="20"
            BackgroundColor="#043151"
            HorizontalOptions="Center"
            MaximumHeightRequest="900"
            MaximumWidthRequest="1200"
            Stroke="#043151"
            StrokeThickness="1"
            VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.2"
                    Radius="10"
                    Offset="2,2" />
            </Border.Shadow>

            <Grid RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Sorting Rules" />

                <Label
                    Grid.Row="1"
                    FontSize="25"
                    HorizontalOptions="Center"
                    Text="Specify how files should be sorted into folders." />

                <BoxView
                    Grid.Row="2"
                    HeightRequest="1"
                    HorizontalOptions="Fill"
                    Color="Gray" />

                <Grid Grid.Row="3" Padding="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="25"
                        Text="File Extension" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="25"
                        Text="Destination Folder" />
                    <Label
                        Grid.Column="2"
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="Case Sensitive" />
                </Grid>

                <Border
                    x:Name="RulesBorder"
                    Grid.Row="4"
                    Padding="5"
                    BackgroundColor="#043151"
                    HorizontalOptions="Fill"
                    Stroke="White"
                    StrokeThickness="1"
                    VerticalOptions="Fill">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <CollectionView ItemsSource="{Binding Rules}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="domainEntities:FileSortRule">
                                <VerticalStackLayout>
                                    <Grid Padding="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2.5*" />
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <Entry
                                            Grid.Column="0"
                                            FontSize="20"
                                            IsEnabled="{Binding IsUserDefined}"
                                            Text="{Binding Extension}"
                                            VerticalOptions="Center" />

                                        <HorizontalStackLayout
                                            Grid.Column="1"
                                            Spacing="5"
                                            VerticalOptions="Center">
                                            <Entry
                                                FontSize="20"
                                                HorizontalOptions="FillAndExpand"
                                                IsEnabled="{Binding IsUserDefined}"
                                                Text="{Binding Category}"
                                                VerticalOptions="Center" />

                                            <Button
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SortingRulesViewModel}}, Path=UpdateRuleCommand}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="8"
                                                FontFamily="FASolid"
                                                FontSize="22"
                                                HeightRequest="40"
                                                IsVisible="{Binding IsUserDefined}"
                                                Text="&#xf044;"
                                                TextColor="White"
                                                WidthRequest="40" />

                                            <Button
                                                Padding="0"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SortingRulesViewModel}}, Path=DeleteRuleCommand}"
                                                CommandParameter="{Binding .}"
                                                CornerRadius="8"
                                                FontFamily="FASolid"
                                                FontSize="22"
                                                HeightRequest="40"
                                                IsVisible="{Binding IsUserDefined}"
                                                Text="&#xf1f8;"
                                                TextColor="White"
                                                WidthRequest="40" />

                                        </HorizontalStackLayout>

                                        <CheckBox
                                            Grid.Column="2"
                                            HorizontalOptions="Center"
                                            IsChecked="{Binding IsCaseSensitive}"
                                            IsEnabled="{Binding IsUserDefined}"
                                            Scale="1.5"
                                            VerticalOptions="Center"
                                            Color="Purple" />
                                    </Grid>

                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="Fill"
                                        Color="Gray" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <Border
                    Grid.Row="5"
                    Padding="0"
                    BackgroundColor="#043151"
                    HorizontalOptions="Fill"
                    Stroke="White"
                    StrokeThickness="2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding AddRuleCommand}"
                        FontSize="25"
                        HeightRequest="50"
                        Text="+ Add Rule"
                        TextColor="White" />
                </Border>

                <Button
                    Grid.Row="6"
                    Background="#0C95F8"
                    Command="{Binding DoneCommand}"
                    FontSize="25"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Text="Save"
                    TextColor="White"
                    WidthRequest="150" />

            </Grid>
        </Border>
    </Grid>
</ContentPage>