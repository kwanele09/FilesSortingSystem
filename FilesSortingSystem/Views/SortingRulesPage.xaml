<ContentPage
    x:Class="FilesSortingSystem.Views.SortingRulesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FilesSortingSystem.ViewModels"
    Title=""
    x:DataType="vm:SortingRulesViewModel"
    Background="#030F2A">

    <Grid x:Name="RootGrid">
        <Border
            x:Name="MainBorder"
            Padding="20"
            BackgroundColor="#043151"
            HorizontalOptions="Center"
            Stroke="#043151"
            StrokeThickness="1"
            VerticalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.2"
                    Radius="10"
                    Offset="2,2" />
            </Border.Shadow>

            <VerticalStackLayout Spacing="15">

                <Label
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Sorting Rules" />
                <Label
                    FontSize="25"
                    HorizontalOptions="Center"
                    Text="Specify how files should be sorted into folders." />

                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="Fill"
                    Color="Gray" />

                <HorizontalStackLayout Spacing="700">
                    <Label
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="File Extension" />
                    <Label
                        FontSize="25"
                        HorizontalOptions="End"
                        Text="Destination Folder" />
                </HorizontalStackLayout>

                <Border
                    x:Name="RulesBorder"
                    BackgroundColor="#043151"
                    HorizontalOptions="Fill"
                    Stroke="White"
                    StrokeThickness="1">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <HorizontalStackLayout
                        Padding="10,0"
                        HorizontalOptions="Fill"
                        Spacing="10"
                        VerticalOptions="Center" />
                </Border>

                <VerticalStackLayout HorizontalOptions="Start" Spacing="15">

                    <Border
                        Padding="0"
                        BackgroundColor="#043151"
                        HorizontalOptions="Center"
                        Stroke="White"
                        StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.2"
                                Radius="10"
                                Offset="2,2" />
                        </Border.Shadow>

                        <Button
                            BackgroundColor="Transparent"
                            FontSize="25"
                            HeightRequest="50"
                            Text="+ Add Rule"
                            TextColor="White"
                            WidthRequest="1090" />
                    </Border>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <CheckBox IsChecked="False" Color="White" />
                        <Label
                            FontSize="25"
                            Text="Exclude subfolders"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Button
                        Background="#0C95F8"
                        FontSize="25"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Text="Save"
                        TextColor="White"
                        WidthRequest="150" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
