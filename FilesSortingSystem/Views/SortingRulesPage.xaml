<ContentPage
    x:Class="FilesSortingSystem.Views.SortingRulesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:domainEntities="clr-namespace:FilesSortingSystem.Core.DomainEntities;assembly=FilesSortingSystem.Core"
    xmlns:vm="clr-namespace:FilesSortingSystem.ViewModels"
    Title=""
    x:DataType="vm:SortingRulesViewModel"
    Background="#030F2A">

    <Grid x:Name="RootGrid">
        <Border
            x:Name="MainBorder"
            Padding="20"
            BackgroundColor="#043151"
            HorizontalOptions="Center"
            Stroke="#043151"
            StrokeThickness="1"
            VerticalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.2"
                    Radius="10"
                    Offset="2,2" />
            </Border.Shadow>

            <VerticalStackLayout Spacing="15">

                <Label
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Sorting Rules" />
                <Label
                    FontSize="25"
                    HorizontalOptions="Center"
                    Text="Specify how files should be sorted into folders." />

                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="Fill"
                    Color="Gray" />

                <HorizontalStackLayout Spacing="260">
                    <Label
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="File Extension" />
                    <Label
                        FontSize="25"
                        HorizontalOptions="End"
                        Text="Destination Folder" />

                    <Label
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="Case Sensitive" />
                </HorizontalStackLayout>

                <Border
                    x:Name="RulesBorder"
                    BackgroundColor="#043151"
                    HorizontalOptions="Fill"
                    Stroke="White"
                    StrokeThickness="1"
                    VerticalOptions="Start">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <CollectionView
                        Margin="0,10,0,0"
                        ItemsSource="{Binding Rules}"
                        SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="domainEntities:FileSortRule">
                                <VerticalStackLayout>
                                    <Grid Padding="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Label
                                            Grid.Column="0"
                                            FontSize="25"
                                            Text="{Binding Extension}"
                                            TextColor="White"
                                            VerticalOptions="Center" />

                                        <Label
                                            Grid.Column="1"
                                            FontSize="25"
                                            Text="{Binding Category}"
                                            TextColor="White"
                                            VerticalOptions="Center" />

                                        <CheckBox
                                            Grid.Column="2"
                                            IsChecked="{Binding IsCaseSensitive}"
                                            Scale="1.5"
                                            VerticalOptions="Center"
                                            Color="Purple" />
                                    </Grid>

                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="Fill"
                                        Color="Gray" />
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </Border>

                <VerticalStackLayout HorizontalOptions="Start" Spacing="15">
                    <Border
                        Padding="0"
                        BackgroundColor="#043151"
                        HorizontalOptions="Center"
                        Stroke="White"
                        StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.2"
                                Radius="10"
                                Offset="2,2" />
                        </Border.Shadow>

                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding AddRuleCommand}"
                            FontSize="25"
                            HeightRequest="50"
                            Text="+ Add Rule"
                            TextColor="White"
                            WidthRequest="1090" />
                    </Border>

                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <CheckBox IsChecked="False" Color="White" />
                        <Label
                            FontSize="25"
                            Text="Exclude subfolders"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Button
                        Background="#0C95F8"
                        Command="{Binding DoneCommand}"
                        FontSize="25"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Text="Done"
                        TextColor="White"
                        WidthRequest="150" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
