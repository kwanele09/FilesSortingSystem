<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FilesSortingSystem.Views.AboutMe"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    Background="#030F2A">
    <Grid
        Padding="30"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Border
            Padding="20"
            Background="#043151"
            HeightRequest="400"
            HorizontalOptions="Center"
            Stroke="#043151"
            StrokeShape="RoundRectangle 20"
            StrokeThickness="0"
            VerticalOptions="Center"
            WidthRequest="700">

            <VerticalStackLayout Spacing="15">
                <Label
                    FontAttributes="Bold"
                    FontSize="35"
                    HorizontalOptions="Center"
                    Text="About the Developer"
                    TextColor="White" />

                <BoxView HeightRequest="1" Color="LightGray" />

                <Label
                    FontSize="18"
                    LineBreakMode="WordWrap"
                    Text="Hello! ðŸ‘‹ I am [Your Name], the developer of this Files Sorting System app. This application was created to help users organize their folders and media files easily and efficiently."
                    TextColor="White" />

                <Label
                    FontSize="18"
                    LineBreakMode="WordWrap"
                    Text="Purpose of the App: To automatically sort files in folders such as Downloads or Desktop. By default, it performs a deep search to organize files even inside subfolders."
                    TextColor="White" />

                <Label
                    FontSize="18"
                    LineBreakMode="WordWrap"
                    Text="Contact / Feedback: You can reach out via email at [YourEmail@example.com] or use the Feedback menu in the app to report issues or suggestions."
                    TextColor="White" />

                <Label
                    FontSize="18"
                    LineBreakMode="WordWrap"
                    Text="Thank you for using the app! I hope it helps you stay organized."
                    TextColor="White" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>